                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs>",
                "/install/vmlinuz ",
                "initrd=/install/initrd.gz ",
                "auto-install/enable=true ",
                "debconf/priority=critical ",
                "ipv6.disable_ipv6=1 net.ifnames=0 biosdevname=0 preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/evilpot.evilpot.vagrant.cfg<wait> ",
                "<enter>"
            ],
            "format": "qcow2",
            "disk_size": 196608,
            "disk_discard": "unmap",
            "disk_cache": "unsafe",
            "disk_compression": true,
            "disk_interface": "virtio-scsi",
            "net_device": "virtio-net",
            "qemuargs": [
                [
                    "-m",
                    "2048M"
                ],
                [
                    "-smp",
                    "cpus=4,sockets=2"
                ],
                [
                    "-drive",
                    "if=none,file=output/evilpot-libvirt/evilpot-libvirt,id=drive0,cache=unsafe,discard=unmap,detect-zeroes=unmap,format=qcow2"
                ]
            ],
            "http_directory": "http",
            "headless": true,
            "iso_url": "https://mirrors.kernel.org/ubuntu-releases/16.04.5/ubuntu-16.04.5-server-amd64.iso",
