        {
            "type": "qemu",
            "name": "evilpot-libvirt",
            "vm_name": "evilpot-libvirt",
            "output_directory": "output/evilpot-libvirt",
            "accelerator": "kvm",
            "qemu_binary": "/usr/libexec/qemu-kvm",
            "boot_wait": "20s",
            "boot_command": [
                "<enter><wait>",
                "<f6><esc>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
